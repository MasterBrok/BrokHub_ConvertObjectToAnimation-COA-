<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BlurEffect
        x:Key="BlurRectMain"
        KernelType="Box"
        Radius="3"
        RenderingBias="Quality" />

    <DropShadowEffect
        x:Key="ShadowRecMain"
        BlurRadius="90"
        Direction="-150"
        RenderingBias="Quality"
        ShadowDepth="10"
        Color="WhiteSmoke" />

    <Style x:Key="LabelTitle" TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource Font2}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="Foreground" Value="{DynamicResource bgMain8}" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>



    <Style x:Key="StyleTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource bgMain1}" />
        <Setter Property="FontFamily" Value="{DynamicResource Font1}" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Padding" Value="3,2,2,0" />
    </Style>




</ResourceDictionary>